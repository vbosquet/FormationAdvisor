<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.formationadvisor.activites.NouveauCentreFormation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="#e2e1e1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Présentez votre organisme"
            android:gravity="center"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laissez les utilisateurs vous contacter facilement"
            android:gravity="center"
            android:layout_marginBottom="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nom_centre_formation"
                android:textColor="#3c3c3c"/>

            <EditText
                android:id="@+id/nom_centre_formation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom de votre établissement"
                android:background="@drawable/border_profil"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textColor="#b1b0b0"
                android:textColorHint="#b1b0b0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/site_centre_formation"
                android:textColor="#3c3c3c"/>

            <EditText
                android:id="@+id/site_internet_centre_formation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Votre site internet"
                android:background="@drawable/border_profil"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textColor="#b1b0b0"
                android:textColorHint="#b1b0b0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_centre_formation"
                android:textColor="#3c3c3c"/>

            <EditText
                android:id="@+id/email_centre_formation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Votre adresse e-mail"
                android:inputType="textEmailAddress"
                android:background="@drawable/border_profil"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textColor="#b1b0b0"
                android:textColorHint="#b1b0b0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adresse"
                android:textColor="#3c3c3c"/>

            <EditText
                android:id="@+id/adresse_centre_formation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rue"
                android:background="@drawable/border_profil"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textColorHint="#b1b0b0"
                android:textColor="#b1b0b0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/code_postal_centre_formation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Code postal"
                    android:inputType="textPostalAddress"
                    android:background="@drawable/border_profil"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#b1b0b0"
                    android:textColorHint="#b1b0b0"
                    android:layout_marginRight="15dp"/>

                <EditText
                    android:id="@+id/localite_centre_formation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ville"
                    android:background="@drawable/border_profil"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#b1b0b0"
                    android:textColorHint="#b1b0b0"/>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border"
        android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telephone_centre_formation"
            android:textColor="#3c3c3c"/>

        <EditText
            android:id="@+id/telephone_centre_formation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Votre numéro de téléphone"
            android:inputType="phone"
            android:background="@drawable/border_profil"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#b1b0b0"
            android:textColorHint="#b1b0b0"/>

        <Button
            android:id="@+id/bouton_suivant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bouton_suivant"
            android:onClick="continuerEnregistrementFormation"
            android:background="#9ac5e4" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

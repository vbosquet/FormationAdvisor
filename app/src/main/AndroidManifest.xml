<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.formationadvisor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.Inscription" />
        <activity android:name=".activites.Connexion" />
        <activity android:name=".activites.TableauDeBord">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.ModifierProfil" />
        <activity android:name=".activites.Parametres" />
        <activity android:name=".activites.ModifierMotDePasse" />
        <activity android:name=".activites.SupprimerCompte" />
        <activity android:name=".activites.NouvelleFormation" />
        <activity android:name=".activites.ModifierFormation" />
        <activity android:name=".activites.MaListeDeFormations" />
        <activity android:name=".activites.NouveauCentreFormation" />
        <activity android:name=".activites.ResultatRechercheFormation" />
        <activity android:name=".activites.FicheFormation" />
        <activity android:name=".activites.AjouterEvaluation" />
        <activity android:name=".activites.RecherchePosition" />
        <activity android:name=".activites.FicheCentreFormation" />
        <activity android:name=".activites.ApprouverFormation" />
        <activity android:name=".activites.FicheFormationAValider" />

        <service android:name=".services.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".activites.BoiteReceptionMessage"></activity>
    </application>

</manifest>